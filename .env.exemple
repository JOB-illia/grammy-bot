# === PRODUCTION OPTIMIZATIONS ===

# Якщо ти хостиш на VPS / DigitalOcean і маєш 2+ CPU — краще врубити кластеризацію
ENABLE_CLUSTERING=true

# WORKER_COUNT=0 означає: брай кількість воркерів = кількість ядер CPU.
# Якщо сервер має 2–4 ядра — залишай 0. Якщо маєш великий VPS і хочеш вручну — став число.
WORKER_COUNT=0

# MEMORY_LIMIT: 512MB — ок для Node.js бота. Якщо бот буде розростатися (ML/AI інтеграції),
# можна підняти до 768–1024.
MEMORY_LIMIT=512

# SHUTDOWN_TIMEOUT: 5000 (5с) — це нормальний grace-переход. Можна 10000, якщо є довгі запити.
SHUTDOWN_TIMEOUT=5000

# === MONITORING ===

# Enable performance monitoring (true/false)
ENABLE_MONITORING=true

# Monitoring webhook URL (for alerts)
MONITORING_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# === RATE LIMITING ===

# Telegram API rate limits (don't change unless you know what you're doing)
TELEGRAM_RATE_LIMIT_PER_SECOND=30
TELEGRAM_RATE_LIMIT_PER_MINUTE=1000

# === LOGGING ===

# Log level: error, warn, info, debug
LOG_LEVEL=info

# Log to file (true/false)
LOG_TO_FILE=true
LOG_FILE_PATH=./logs/bot.log

# === BACKUP ===

# Auto-backup Firebase data (true/false)
ENABLE_AUTO_BACKUP=true

# Backup interval in hours
BACKUP_INTERVAL=24

# Backup storage path
BACKUP_PATH=./backups/